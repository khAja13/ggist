datasource db {
  provider = "mysql"
  url      = "mysql://root:root@localhost:3306/gist"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String       @id @default(uuid())
  createdAt DateTime     @default(now())
  email     String       @unique
  password  String
  name      String
  picture   String?
  provider  AuthProvider
  gists     Gist[]
}

model Gist {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  title     String
  content   String
  updatedAt DateTime @default(now())
  user      User     @relation(fields: [id], references: [id])
}

enum AuthProvider {
  EMAIL
  GOOGLE
  GITHUB
}
